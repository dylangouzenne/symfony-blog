    h2{
        text-align: center;
    }

    .list-article{
        display: flex;
        flex-direction: row;
    }

    .carte_article{
        width: 20%;
        margin: 1em;
        padding: 1em;
        background-color: #E3E2E8;
    }
</style>

<h2>liste des Article</h2>

<div class="list-article"> 

    {% for Article in Article %}
